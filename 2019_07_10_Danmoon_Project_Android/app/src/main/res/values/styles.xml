<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#ffe033</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffe033</item>
        <item name="colorPrimaryDark">#F7F3C6</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/nanumgothicextrabold</item>
        <item name="android:alertDialogTheme">@style/MyAlertDialogStyle</item>
    </style>
    <style name="Expanded.Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">36dp</item>
    </style>

    <style name="Collapsed.Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18dp</item>
    </style>
    <style name="PostEditTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/danmoon_post_background</item>
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textSize">25dp</item>
        <item name="colorAccent">#ffff</item>
        <item name="buttonBarPositiveButtonStyle">@style/buttonBarButtonStyle.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/buttonBarButtonStyle.Negative</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="buttonBarButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
    </style>
    <style name="buttonBarButtonStyle.Negative">
        <item name="android:backgroundTint">#ffff</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="buttonBarButtonStyle.Positive">
        <item name="android:backgroundTint">#ffff</item>
        <item name="android:textColor">#000000</item>
    </style>


</resources>
